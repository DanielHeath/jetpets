@import 'nib'
@import '_connect'
@import '_lobby'
@import '_gamepad'

global-reset()

*
  box-sizing: border-box

body
  margin: 0
  -webkit-font-smoothing: antialiased

nav
  position: absolute
  right: 1em
  top: 1em
  z-index: 1
  a
    background: #333
    color: #eee
    display: block
    padding: 0.5em
    text-decoration: none

#page
  background: #eee
  border: 1em solid #333
  bottom: 0
  color: #333
  left: 0
  padding: 1em 2em
  position: absolute
  right: 0
  top: 0

h1
  font-size: 2em
  padding: 0.5em 0
  text-transform: lowercase

p
  font-size: 1.1em
  line-height: 1.4em
  margin: 1em 0 2em 0
