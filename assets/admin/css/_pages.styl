
#game
  .status
    font-size: 1.1em
    margin-bottom: 1em
    border: 1px solid #333
    display: inline-block
    padding: 0.4em
    text-align: center
    width: 10em
  .status.in-progress
    background-color: #3ae600
    color: #333
  .status.waiting
    background-color: #ffad33
    color: #333

button.dislodge
  width: 15em
  i.icon:nth-child(1)
    margin-right: 0.5em
  i.icon:nth-child(2)
    margin-left: 0.5em

#pin
  ol
    list-style-type: decimal
  li
    font-size: 1.1em
    margin: 0.5em
