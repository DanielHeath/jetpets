@import 'nib'

global-reset()

@import '_nav'
@import '_forms'
@import '_tables'
@import '_pages'

*
  box-sizing: border-box

body
  background-color: #eee
  color: #333
  font-size: 18px
  margin: 0
  -webkit-font-smoothing: antialiased

#container
  display: table

nav
  bottom: 0
  display: block
  position: absolute
  top: 0
  width: 10em
        
#page
  display: block
  margin-left: 10em
  padding: 2em 3em

h1
  font-size: 1.8em
  margin-bottom: 1.5em

h2
  font-size: 1.3em
  margin-bottom: 1em

a
  color: #1865ff
  cursor: pointer
  text-decoration: none
