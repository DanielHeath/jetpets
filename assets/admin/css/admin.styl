@import 'nib'

global-reset()

*
  box-sizing: border-box

body
  background-color: #eee
  color: #333
  margin: 0
  -webkit-font-smoothing: antialiased

#container
  display: table

nav
  background-color: #333
  display: table-cell
  font-size: 1.2em
  width: 10em
  ul
    min-height: 30em
  li
    background-color: #333
    border-top: 1px solid #666
    border-bottom: 1px solid #000
    cursor: pointer
    display: block
    padding: 0.8em
  i
    margin-right: 0.5em
  a
    color: #eee
    
#page
  display: table-cell
  min-height: 30em
  padding: 2em

h1
  font-size: 2em
  margin: 2em 0 1em 0
  i
    margin-right: 1em

h1:first-child
  margin-top: 0

#match
  table
    margin-bottom: 1em
  button
    display: block
    font-size: 0.9em
    height: 2.5em
    padding: 0.5em 1em
    text-align: left
    width: 15em
    i
      float: left
      margin-right: 1em

table
  background: #f9f9f9
  border: 1px solid #333

th, td
  padding: 0.5em

th
  font-weight: bold
  width: 8em

td
  border-top: 1px solid #333

a
  color: #1865ff
  cursor: pointer
  text-decoration: none

td.empty
  font-style: italic
