@import 'nib'

global-reset()

*
  box-sizing: border-box

body
  background: #eee
  color: #333
  margin: 0
  padding: 2em
  -webkit-font-smoothing: antialiased

h1
  font-size: 2em
  margin: 2em 0 1em 0
  i
    margin-right: 1em

h1:first-child
  margin-top: 0

#match
  table
    margin-bottom: 1em
  button
    display: block
    font-size: 0.9em
    height: 2.5em
    padding: 0.5em 1em
    text-align: left
    width: 15em
    i
      float: left
      margin-right: 1em

table
  background: #f9f9f9
  border: 1px solid #333

th, td
  padding: 0.5em

th
  font-weight: bold
  width: 8em

td
  border-top: 1px solid #333

a
  color: #1865ff
  cursor: pointer
  text-decoration: none

td.empty
  font-style: italic
